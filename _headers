# Desabilitar o cache para o service worker e manifest
/service-worker.js
  Cache-Control: no-store

/manifest.json
  Cache-Control: no-cache

# Política de Segurança de Conteúdo (CSP) para seu aplicativo
/*
  Content-Security-Policy: default-src 'self'; script-src 'self' https://apis.google.com 'unsafe-inline'; connect-src 'self' https://your-api-endpoint.com https://speech.googleapis.com; upgrade-insecure-requests; media-src 'self'; img-src 'self' data:;
